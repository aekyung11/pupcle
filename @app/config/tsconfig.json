{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "declarationDir": "dist",
    "lib": ["es2018", "esnext.asynciterable"],
    "target": "es2018",
    "module": "NodeNext"
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "../../node_modules"
  ],
  "include": ["src"]
}
