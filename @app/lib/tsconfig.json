{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "declarationDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es5",
    "module": "commonjs",
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "../../node_modules"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
